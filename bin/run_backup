#!/usr/bin/env ruby

ENV[ 'ANSIBLE_HOST_KEY_CHECKING' ] = 'False'

root =
  File.expand_path \
    '..',
    File.dirname( __FILE__ )

hosts    = "#{ root }/hosts/local.ini"
playbook = "#{ root }/backup.yml"

to_run =
  [
    'ansible-playbook',
    playbook,
    '-i',
    hosts
  ]

Dir.chdir root
exec to_run.join( ' ' )
